%h1
  = t '.title', team_name: team.name
  - if team.private?
    =image_tag('encrypted_small.svg')
%br

%ul.teams-nav.nav.nav-tabs
  %li.tab.active
    %a{"data-toggle" => "tab", href: "#groups"}
      Groups
  %li.tab
    %a{"data-toggle" => "tab", href: "#members", id: 'members-tab'}
      Members
  %li.tab
    %a{"data-toggle" => "tab", href: "#api_users", id: 'api-users-tab'}
      Api-Users
  
.tab-content.teams-content
  #groups.tab-pane.fade.in.active
    = render 'groups'
  #members.tab-pane.fade
    = render 'members'
  #api_users.tab-pane.fade
    = render 'api_users'
