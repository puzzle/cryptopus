- if current_user
  %nav.navbar.navbar-default{:role => "navigation"}
    .container-fluid

      .navbar-header
        %a.font{href: "/teams", class: "font back-link no-hover"} Leave Admin
        = link_to(image_pack_tag("cryptopussy_without_text.svg", class: 'logo-icon'), root_path, class:'navbar-logo')
        = link_to('Cryptopus Admin', root_path, class: 'navbar-title font no-hover')
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right.ml-auto
          %li.dropdown
            %a.dropdown-toggle.font.helper-img.pr-0{"data-toggle": "dropdown", href: "#"}
              = t(:settings)
              = image_pack_tag("angle-down.svg", class: "dropdown-arrow")
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a= nav_link t(:settings), admin_settings_path
                - if policy(Recryptrequest).index?
                  %a= nav_link t(:recrypt_requests), admin_recryptrequests_path
                %a= nav_link t(:users), admin_users_path
                %a= nav_link t('teams.title'), admin_teams_path
                %a= nav_link t('admin.maintenance_tasks.index.title'), admin_maintenance_tasks_path
          %li
            = link_to(current_user.username, profile_path, method: :get, class: 'font link username')
          %li
            = link_to(image_pack_tag("sign_out.svg", class: "logout-icon"), session_destroy_path, class: "reduced-padding")

  - unless @breadcrumbs.nil?
    .bread-container
      .breadcrumb
        = render_breadcrumbs separator: '', tag: :li
