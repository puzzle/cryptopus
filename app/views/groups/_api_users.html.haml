- if current_user.api_users.empty?
  = t 'api-user.empty'
  = link_to t('api-user.new.title'), new_api_user_path, class: 'btn btn-primary pull right'
- else
  %table.table.table-striped
    - current_user.api_users.each do |api|
      %tr{class: "#{cycle( 'odd', 'even' )}"}
        %td= api.label
        %td= toggle_api_user api
