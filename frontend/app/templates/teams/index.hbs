<div class="container py-2">
  <div class="mt-4">
    {{#if q}}
      <SearchResultComponent @q={{q}}/>
    {{/if}}
    {{#if @model}}
      {{#each this.model as |team|}}
        <Team::Show @team={{team}} />
      {{/each}}
    {{else}}
      <h5>{{t "teams.index.no_content"}}</h5>
    {{/if}}
    {{#while-loading}}
      <div class="lds-roller">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    {{/while-loading}}
  </div>
</div>