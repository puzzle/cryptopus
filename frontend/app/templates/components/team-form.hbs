<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="accountFormModalLabel" aria-hidden="true" {{did-insert this.setupModal this}}>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title align-middle" id="accountFormModalLabel">{{@title}}</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label={{t "close"}}>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">

          <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                  <label name="name">{{t "team.name"}}</label>
                  <div>
                    <Input class="form-control" @value={{this.changeset.name}} @name="name" />
                    <ValidationErrorsList @errors={{this.changeset.error.name.validation}}/>
                  </div>
                </div>
            </div>

            <div class="col-md-12">
              <div class="form-group">
                <label name="description">{{t "team.description"}}</label>
                <div>
                  <Textarea class="form-control vertical-resize" @value={{this.changeset.description}} @name="description"/>
                  <ValidationErrorsList @errors={{this.changeset.error.description.validation}}/>
                </div>
              </div>
            </div>

          </div>

        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" {{on "click" (fn this.submit this.changeset)}}>{{t "save"}}</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{t "close"}}</button>
      </div>
    </div>
  </div>
</div>
