{{#unless @row}}
  <div id="encryptable-{{@attribute}}-label">
    {{#if @label}}
      {{@label}}
    {{else}}
      {{t @attribute}}
    {{/if}}
  </div>
{{/unless}}
<div class="d-flex">
  <div class="input-group border-tertiary border-2 border border-radius-4 {{if @row "w-100" "w-50 mb-1"}}">
    {{#if this.isAttributeVisible}}
      <Input id="cleartext_{{@attribute}}" class="text-truncate d-inline form-control border-0" disabled="true" @value={{format-cleartext this.args.encryptable this.args.attribute}} />
    {{else}}
      <span id="show-{{@attribute}}" role="button" class="text-truncate correct-pixel-error-omg show-hidden-attribute-button show-text hidden-attribute-cover border-0" {{on "click" (action "showValue")}}>{{t (concat "encryptable/credentials.show.show_" this.args.attribute)}}</span>
    {{/if}}
    <button class="btn btn-light btn-outline-secondary rounded-corners-right" type="button" {{on "click" this.copyAttribute}}>
      <img class="icon-clippy img" src="/assets/images/clipboard.svg" alt="clip">
      <BsTooltip @title={{t (concat "encryptable/credentials.show.copy_" @attribute)}} @delayShow="500" />
    </button>
  </div>
  {{#unless @row}}
    <span class="encryptable-lock-icon">
      <img class="encrypted-icon d-inline-block" src="/assets/images/encrypted_small.svg" alt="encrypted value">
      <BsTooltip @title="{{t "tooltips.encryption_algorithm"}} AES256iv" @delayShow="300" />
    </span>
  {{/unless}}
</div>
