<BsModal @onSubmit={{this.submit}} @onHidden={{this.abort}} @renderInPlace="true" @size="lg" as |Modal|>
  <Modal.header>
    <h3 class="modal-title" id="teamConfigureModalLabel">{{t "teams.configure.title"}}</h3>
  </Modal.header>
  <Modal.body>
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="api-users-tab" data-toggle="tab" href="#api-users" role="tab" aria-controls="api-users" aria-selected="false"></a>
      </li>
    </ul>
    <BsTab as |tab|>
      <tab.pane @title={{t "teams.show.members"}}>
        <div class="columns members">
          <div class="row justify-content-end">
            <div class="col-sm-4 float-right">
              <PowerSelectTypeahead @renderInPlace="true" @options={{this.candidates}} @search={{this.search}} @onChange={{this.addMember}} @placeholder={{t "teammembers.new.title"}} as |candidate|>
                {{candidate.label}}
              </PowerSelectTypeahead>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col">
              <ul>
                {{#each this.members as |member|}}
                  <li>
                    {{member.label}}
                    {{#if member.admin}}
                      <img src="/ember/assets/images/penguin.svg" alt="admin" class="float-right">
                    {{else}}
                      {{#if member.deletable}}
                        <a role="button" {{on "click" (fn this.deleteMember member)}}>
                          <img src="/ember/assets/images/remove.svg" alt="remove">
                        </a>
                      {{/if}}
                    {{/if}}
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </tab.pane>
      <tab.pane @title={{t "profile.api_users.api_users"}}>
        <table class="table table-striped mt-3">
          <thead>
            <tr>
              <td>{{t "user"}}</td>
              <td>{{t "description"}}</td>
              <td>{{t "teams.form.enabled"}}</td>
            </tr>
          </thead>
          <tbody>
            {{#each this.apiUsers as |user|}}
              <tr>
                <td>{{user.username}}</td>
                <td>{{user.description}}</td>
                <td>
                  <XToggle @theme="material" @value={{user.enabled}} @onToggle={{fn this.toggleApiUser user}} />
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </tab.pane>
    </BsTab>
  </Modal.body>
  <Modal.footer>
    <BsButton @onClick={{action this.abort}} @type="secondary">{{t "close"}}</BsButton>
  </Modal.footer>
</BsModal>
