{{#if this.isNewAccount}}
  <Account::Form @onAbort={{this.toggleAccountCreating}} @title={{t "accounts.new.title"}}/>
{{/if}}
{{#if this.isNewFolder}}
  <Folder::Form @onAbort={{this.toggleFolderCreating}} @title={{t "folders.new.title"}}/>
{{/if}}
{{#if this.isNewTeam}}
  <Team::Form @onAbort={{this.toggleTeamCreating}} @title={{t "teams.new.title"}}/>
{{/if}}

<pzsh-topbar>
  <LinkTo @route="index" class="cryptopus-logo">
    <img width="214" height="32" src="/assets/images/cryptopus-logo.svg" alt="cryptopus logo">
  </LinkTo>
</pzsh-topbar>

<pzsh-banner>
  <img slot="tangram" width="95" height="100" src="/assets/images/tangram.svg" alt="tangram">
  <div slot="content" class="search">
    <div class="search-field">
      <Input @class="search" @type="search"
             @value={{ this.navService.searchQuery }}
             placeholder={{t "search.index.type_to_search"}} @keyUp={{this.searchByQuery}}
             @autofocus={{this.isStartpage}} maxlength="70"/>
      <button>
        <pzsh-icon name="search"/>
      </button>
    </div>

    <BsDropdown @class="d-flex align-items-center" as |dd|>
      <dd.toggle class="dropdown-toggle">
        <pzsh-icon name="plus-circle"></pzsh-icon>
        <div class="dropdown-toggle-text">
          <span>{{t "add"}}</span>
          <img class="icon-dropdown-toggle-1" src="/assets/images/angle-down-blue.svg" alt="v">
        </div>
      </dd.toggle>
      <dd.menu @align="right" as |ddm|>
        <ddm.item>
          <a role="button" class="dropdown-item" {{on "click" this.toggleAccountCreating}}>
            {{t "accounts.new.title"}}
          </a>
        </ddm.item>
        <ddm.item>
          <a role="button" class="dropdown-item" {{on "click" this.toggleFolderCreating}}>
            {{t "folders.new.title"}}
          </a>
        </ddm.item>
        <ddm.item>
          <a role="button" class="dropdown-item" {{on "click" this.toggleTeamCreating}}>
            {{t "teams.new.title"}}
          </a>
        </ddm.item>
      </dd.menu>
    </BsDropdown>
  </div>
</pzsh-banner>

<pzsh-menu>
  <div slot="actions">
    <div class="input-wrapper ml-5">

    </div>

    <pzsh-menu-action>
      <a class="link-new-tab" href="https://github.com/puzzle/cryptopus/wiki/User-manual" target="_blank" rel="noreferrer noopener">
        <pzsh-icon name="question-circle"></pzsh-icon>
        {{ t "help"}}
      </a>
    </pzsh-menu-action>

    {{#if this.userService.mayManageSettings}}
      <BsDropdown @class="d-flex align-items-center" as |dd|>
        <dd.toggle class="dropdown-toggle navbar-dropdown-toggle">
          <div class="navbar-dropdown-toggle-content">
            <pzsh-icon name="sliders-v-alt"></pzsh-icon>
            Admin
          </div>
          <img class="icon-dropdown-toggle-2" src="/assets/images/angle-down-white.svg" alt="v">
        </dd.toggle>
        <dd.menu @align="right" as |ddm|>
          <ddm.item>
            <LinkTo role="button" class="dropdown-item" @route="admin.users">
              {{ t "users" }}
            </LinkTo>
          </ddm.item>
          <ddm.item>
            <LinkTo role="button" class="dropdown-item" @route="admin.settings">
              {{ t "settings" }}
            </LinkTo>
          </ddm.item>
        </dd.menu>
      </BsDropdown>
    {{/if}}

    <BsDropdown @class="d-flex align-items-center" as |dd|>
      <dd.toggle class="dropdown-toggle navbar-dropdown-toggle">
        <div class="navbar-dropdown-toggle-content">
          <pzsh-icon name="user"></pzsh-icon>
          {{ this.givenname }}
        </div>
        <img class="icon-dropdown-toggle-2" src="/assets/images/angle-down-white.svg" alt="v">
      </dd.toggle>
      <dd.menu @align="right" as |ddm|>
        <ddm.item>
          <LinkTo role="button" class="dropdown-item" @route="profile">
            {{ t "profile_title" }}
          </LinkTo>
          <a role="button" class="dropdown-item" href="/session/destroy">
            {{ t "logout" }}
          </a>
        </ddm.item>
      </dd.menu>
    </BsDropdown>
  </div>
</pzsh-menu>


