%br/
= form_tag Rails.application.routes.url_helpers.recrypt_ldap_path do
  .alert.alert-info#ldap_info
    = t 'admin.recryptrequests.uncrypterror.ldap_password_changed'
    %br/
    = t 'admin.recryptrequests.uncrypterror.ldap_enter_old_password'
  %br/
  .form-group
    %b
      = t 'admin.recryptrequests.uncrypterror.ldap_new_password'
    = password_field_tag :new_password, params[:new_password], class: 'form-control', autofocus: true

  .form-group
    %b.ldap_old_password
      = t 'admin.recryptrequests.uncrypterror.ldap_old_password'
    = password_field_tag :old_password, params[:old_password], class: 'form-control'

  %label{for: "recrypt_request", id: "forgot_password_checkbox"}
    = check_box_tag :forgot_password
    = t :forgot_password

  .alert.alert-danger#recrypt_description
    =simple_format t 'admin.recryptrequests.uncrypterror.forgot_password_recrypt'
  %br/
  %label{for: "send"}
    = submit_tag t('admin.recryptrequests.uncrypterror.send'), class: 'btn btn-primary'
