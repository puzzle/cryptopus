{{#if this.isTeamEditing}}
  <TeamForm @team={{@team}} @onAbort={{this.toggleTeamEdit}} @title={{t "teams.edit.title"}}/>
{{/if}}
{{#if this.isTeamConfiguring}}
  <TeamMemberConfigure @teamId={{@team.id}} @onAbort={{this.toggleTeamConfigure}}/>
{{/if}}
{{#if this.isNewFolder}}
  <FolderForm @onAbort={{this.toggleFolderCreating}} @title={{t "folders.new.title"}}/>
{{/if}}
<div class="mt-4 mb-4 border-radius-4">
  <div>
    <div class="row py-2 d-flex team-card-header {{if this.collapsed "rounded" "rounded-top"}}">
      <div class="col-auto my-auto" role="button" {{on "click" this.collapse}}>
        {{#if this.args.team.private}}
          <img class="icon icon-big-button py-auto" src="/ember/assets/images/encrypted_small-white.svg" alt="">
        {{else}}
          <img class="icon icon-big-button py-auto" src="/ember/assets/images/members-white.svg" alt="">
        {{/if}}
      </div>
      <div class="col pl-0 break-on-smartphone" role="button" {{on "click" this.collapse}}>
        <h5 class="d-inline">{{@team.name}}</h5>
      </div>
      <div class="col-auto d-flex justify-content-between align-items-center align-right-on-smartphone">
        <span class="mx-1" role="button" {{on "click" this.toggleFolderCreating}}>
          <img class="icon-big-button" src="/ember/assets/images/plus-white.svg" alt="new">
          <BsTooltip @title={{t "tooltips.add_folder"}} @delayShow="1000" />
        </span>
        <DeleteWithConfirmation @class="mx-1" @record={{@team}} @didDelete={{this.transitionToIndex}}>
          <img class="icon-big-button" src="/ember/assets/images/delete-white.svg" alt="delete">
          <BsTooltip @title={{t "teams.delete"}} @delayShow="1000"/>
        </DeleteWithConfirmation>
        <span class="mx-1" role="button" {{on "click" this.toggleTeamEdit}}>
          <img class="icon-big-button" src="/ember/assets/images/edit-white.svg" alt="edit">
          <BsTooltip @title={{t "teams.edit.title"}} @delayShow="1000" />
        </span>
        <span class="mx-1" id="config_team_button" role="button" {{on "click" this.toggleTeamConfigure}}>
          <img class="icon-big-button" src="/ember/assets/images/team-configure-white.svg" alt="configure">
          <BsTooltip @title={{t "teams.configure.title"}} @delayShow="1000" />
        </span>
        <span class="mx-1" role="button" {{on "click" this.toggleFavourised}}>
          <img class="icon-big-button" src="/ember/assets/images/star-white{{if @team.favourised "-filled"}}.svg" alt="star">
          <BsTooltip @title={{if @team.favourised (t "teams.defavorise") (t "teams.favorise")}} @delayShow="1000" />
        </span>
        <span role="button" name="team-collapse" {{on "click" this.collapse}}>
          {{#if this.collapsed}}
            <img class="icon-big-button float-right" src="/ember/assets/images/angle-left-white.svg" alt="<">
          {{else}}
            <img class="icon-big-button float-right" src="/ember/assets/images/angle-down-white.svg" alt="v">
          {{/if}}
        </span>
      </div>
    </div>

    <BsCollapse class="row bg-blue-1 border border-darker border-top-0 rounded-bottom" @collapsed={{this.collapsed}}>
      <div class="col px-4 py-3 list-folder-header">
        {{#if @team.description}}
          <div class="row">
            <div class="col">
              <p class="text-muted description mb-0">{{@team.description}}</p>
            </div>
          </div>
        {{/if}}

        {{#if @team.folders}}
          <div class="pt-2">
            {{#each @team.folders as |folder|}}
              <div class="row bg-white border border-radius-4 mb-5-folder">
                <div class="col folder-no-p">
                  <FolderShow @folder={{folder}}/>
                </div>
              </div>
            {{/each}}
          </div>
        {{else}}
          <div class={{if @team.description "pt-2"}}>
            <em>{{t "teams.no_folders"}}</em>
          </div>
        {{/if}}
      </div>
    </BsCollapse>
  </div>
</div>
