%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=US-ASCII", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %link{href: "/favicon.png", rel: "shortcut icon", type: "image/png"}/
    = csrf_meta_tags
    %title Cryptopus
    = stylesheet_link_tag :application, media: "all", nonce: true
    = javascript_pack_tag 'stylesheets', nonce: true
  %body{"data-locale" => I18n.locale}
    #ember
    = render 'layouts/icons'
    .container.main{role: "main"}
      = form_tag recrypt_oidc_path do
        .alert.alert-info#ldap_info
          = t '.notice'
        %br/
        .form-group
          %b
            = t '.cryptopus_password'
          = password_field_tag :old_password, params[:old_password], class: 'form-control', autofocus: true

        %label{for: "send"}
          = submit_tag t('.migrate'), class: 'btn btn-primary'
