= form_for([@account], html: { role: 'form', autocomplete: 'off' }) do |f|
  = f.error_messages
  .form-group
    = f.label :account
    = f.text_field :accountname, autofocus: true, class: 'form-control'
  .form-group
    = f.label :username
    = f.text_field :cleartext_username, class: 'form-control'
  .form-group
    = f.label :password
    .form-inline
      = f.text_field :cleartext_password, class: 'form-control secret', id: 'account_password'
      = button_tag(t('accounts.edit.random_password'), type: 'button', id: 'random_password', class: 'btn btn-primary btn-sm')
      %div#strength
        .form-group
          = f.label :tag
    = f.text_field :tag, class: 'form-control'
  .form-group
    = f.label :description
    %span#unencrypted
      (#{I18n.t('unencrypted_field_caption')})
    = f.text_area :description, class: 'form-control'
    = f.hidden_field :group_id
    = f.submit @submit_button_text, class: 'btn btn-primary'
    =link_to "Cancel", accounts_path(@account), {:class=>"btn btn-primary"}
