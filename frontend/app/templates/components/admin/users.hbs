{{#if this.isUserNew}}
  <Admin::User::Form @onAbort={{this.toggleUserNew}} @onSuccess={{this.addUser}} @title={{t "admin.users.new.title"}} />
{{/if}}
{{@model}}
<div class="pt-3">
  <div class="users-table-header">
    <h1>
      {{t "admin.users.index.title"}}
    </h1>

    {{#if this.isUserAllowedToCreateUser}}
      <a class="btn edit_button add-user" role="button" {{on "click" this.toggleUserNew}}>
        <img class="icon-button" src="/assets/images/plus.svg" alt="edit">
        <BsTooltip @title={{t "admin.users.index_menu.create"}} @delayShow="1000"/>
      </a>
    {{/if}}
  </div>

  <Admin::User::Table @users={{@users}} />
</div>
