%h1= t '.title'
%table.table.table-striped#teamlist_table
  %tr
    %th.teamlist-row= t '.teamname'
    %th.teamlist-row= t '.num_folders'
    %th.teamlist-row= t '.num_accounts'
    %th.teamlist-row= t '.members'
  - @teams.each do |team|
    - @team = team
    %tr{class: "#{cycle( 'odd', 'even' )}", 'team-id': team.id}
      - if team.private?
        %td= image_pack_tag( "encrypted_small.svg", class: 'icon' ) + ' ' + team.name
      - else
        %td= image_pack_tag( "members.svg", class: 'icon' ) + ' ' + team.name
      %td= number_of_folders
      %td= number_of_accounts
      %td
        =link_to('Show', '#', class: 'members-link')
