<div id="sidebar">
  <nav class="nav-side-bar navbar navbar-dark navbar-inverse p-0">
    <div class="navbar-collapse p-0" id="nav-side-bar-container" {{did-insert this.setupModal this}}>
      <div class="list-group list-group-root">
        <div class="d-flex justify-content-center list-group-top-button list-group-item-action border-0">
          <BsButtonGroup class="button-group" @type="radio" @value={{this.showsFavourites}} @onChange={{this.toggleFavourites}} as |bg|>
            <bg.button class="toggle-button" @value={{false}}>
              <img class="icon icon-button" src="/ember/assets/images/members.svg" alt="">
            </bg.button>
            <bg.button class="toggle-button" @value={{true}}>
              <img class="icon icon-button" src="/ember/assets/images/star{{if this.showsFavourites "-filled"}}.svg" alt="star">
            </bg.button>
          </BsButtonGroup>
        </div>

        {{#if this.navService.availableTeams}}
          <div class="mb-5 d-flex flex-column">
            <div class="side-nav-bar-teams-list scroll-bar">
              {{#each this.navService.sortedTeams as |team|}}
                <a {{on "click" (fn this.setSelectedTeam team)}} role="button" id="side-bar-team-{{team.id}}" class="list-group-item list-group-item-action {{if (eq team this.navService.selectedTeam) "bg-blue-three" "bg-blue-one"}} ">
                  {{#if team.private}}
                    <img class="icon icon-button mr-2" src="/ember/assets/images/encrypted_small-blue.svg" alt="">
                  {{else}}
                    <img class="icon icon-button mr-2" src="/ember/assets/images/members.svg" alt="">
                  {{/if}}
                  {{truncate team.name 13}}
                  {{#if (not team.folders)}}
                  {{else if (and team.folders (or (not (eq team this.navService.selectedTeam)) this.collapsed))}}
                    <img class="icon icon-button-angle float-right" src="/ember/assets/images/angle-left.svg" alt="<">
                  {{else}}
                    <img class="icon icon-button-angle float-right" src="/ember/assets/images/angle-down.svg" alt="v">
                  {{/if}}
                </a>
                {{#if team.folders}}
                  <BsCollapse class="list-group" id="nav-folders-{{team.id}}" @collapsed={{or (not (eq team this.navService.selectedTeam)) this.collapsed}}>
                    {{#each team.folders as |folder|}}
                      <a role="button"  class="list-group-item list-folder-item" {{on "click" (fn this.setSelectedFolder folder)}}>
                        <img class="icon icon-button mr-1" src="/ember/assets/images/folder.svg" alt="">
                        {{truncate folder.name 15}}
                      </a>
                    {{/each}}
                  </BsCollapse>
                {{/if}}
              {{/each}}
            </div>
          </div>

        {{else}}
          <div class="list-group-item list-group-item-action bg-blue-one">{{t "teams.none_available"}}</div>
        {{/if}}
      </div>
    </div>
  </nav>
</div>
