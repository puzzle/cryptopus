%h1
  = t '.title'
  ( #{@account.accountname} )
= form_for [@account, @item], html: { multipart: true } do |f|
  = f.error_messages
  .form-group
    = f.label t('.upload')
    = f.file_field :file
  .form-group
    = f.label :description
    %br/
    = f.text_area :description, class: 'form-control'
  = f.submit t('.upload_file'), class: 'btn btn-primary'
  =link_to "Cancel", account_path(@account), {:class=>"btn btn-primary"}
