<h1><%=t '.title', group_name: @group.name, team_name: @team.name %></h1>


<%= link_to 'New', new_team_group_account_path, class: 'btn btn-primary pull-right' %>

<table class='table table-striped'>

  <tr>
    <th style='width: 150px;'><%=t '.account' %></th>
    <th><%=t :description %></th>
    <th colspan="3"><%=t :actions %></th>
  </tr>

  <% @accounts.each do |account| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= link_to image_tag( "encrypted_small.svg" ) + " " + account.accountname, [@team, @group, account] %></td>
      <td><%= account.description %></td>
      <td class='action_icon'><%= link_to image_tag("edit.svg"), [:edit, @team, @group, account] %></td>
      <td class='action_icon'><%= link_to_destroy [@team, @group, account], account %></td>
    </tr>
  <% end %>

</table>
