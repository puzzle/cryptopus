= hidden_field_tag :team_id, team.id
= link_to t('groups.new.title'), new_team_group_path, class: 'btn btn-primary pull-right', id: 'group-button'
%table.table.table-striped
  %tr
    %th{style: "width: 150px;"}= t '.group'
    %th= t :description
    %th{colspan: "3"}= t :actions
  - for group in @groups
    %tr{class: "#{cycle('odd', 'even')}"}
      %td= link_to image_pack_tag( "folder_open.svg" ) + " " + %Q{#{group.name}}, team_group_accounts_path(team, group)
      %td= h simple_format group.description
      %td.action_icon= link_to image_pack_tag("edit.svg"), [:edit, team, group]
      %td.action_icon= link_to_destroy [team, group], group
